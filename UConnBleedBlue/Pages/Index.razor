@page "/"

@inject NavigationManager Nav

@* Notes:
   1rem = root font size (typically 16px). So:
   2.5rem ≈ 40px
   3.125rem ≈ 50px *@


<ErrorBoundary>

    <ChildContent>

        <PageTitle>Football Alumni News</PageTitle>

        <h2 class="top-header">
            3nd Annual "Bleed Blue With Andy" UConn Football Alumni Tailgate!
        </h2>

        <h2 class="top-header">
            Saturday November 1, 2025&nbsp;&nbsp;Opponent: UAB&nbsp;&nbsp;&nbsp;&nbsp;Game: 12 Noon&nbsp;&nbsp;Tailgate: 9:00 AM
        </h2>
    
        <a href="https://www.nhregister.com/sports/uconn/article/andy-baylock-uconn-baseball-football-20779937.php?taid=68823c8385489b00010acfa9&utm_campaign=trueanthem&utm_medium=social&utm_source=twitter" target="_blank" rel="noopener noreferrer">
            <h2 class="row-header">UConn 'treasure' Andy Baylock is still telling stories, still tossing pitches at age 87</h2>
        </a>

        <button class="row-header ticket-btn center-btn" @onclick="GotoTicketForm">
            Reserve Your Complementary Tickets To The Game
        </button>

        <br />

        @if (imageSource1 is not null)
        {
            <div>
                <img src="@imageSource1" asp-append-version="true" class="center" style="width: 90%"/>
            </div>
        }
    </ChildContent>

    <ErrorContent>
        <p style="color:red;">Oops, something went wrong on this page.</p>
    </ErrorContent>
</ErrorBoundary>

<style>

    .top-header {
        font-size: clamp(1.4rem, 5.5vw, 2.4rem); /* Scales well across devices */
        font-weight: 700;
        color: mediumblue;
        text-align: center;
        text-shadow: 0.5px 0.5px 0.5px rgba(0, 0, 255, 0.15); /* very subtle blue glow */
        padding: 0.25rem;
        white-space: normal;
    }

    h1 {
        display: table;
        margin: 0.625rem auto; /* 10px */
        padding: 0.3125rem; /* 5px */
        font-size: clamp(1.5rem, 6vw, 3.125rem); /* ~24px to 50px */
        color: blue;
        overflow: hidden;
    }

    h2 {
        display: table;
        margin: 0.625rem auto; /* 10px */
        padding: 0.3125rem; /* 5px */
        font-size: clamp(1.2rem, 5vw, 2.2rem); /* 35px */
        font-weight: bold;
        color: blue;
        overflow: hidden;
    }
  
    .link-header {
        text-decoration: none;
        color: #004aad;           /* strong blue */
        cursor: pointer;
    }

    .link-header:hover h2 {
        color: #d40000;           /* highlight color on hover */
        text-decoration: underline;
        background-color: #f0f0f0;
        border-radius: 6px;
    }

    .row-header {
        font-weight: bold;
        font-size: clamp(1.2rem, 5vw, 2.2rem);
        transition: all 0.2s ease-in-out;
    }

    .ticket-btn {
        background-color: #004aad; /* UConn blue */
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        cursor: pointer;
        transition: background-color .2s ease-in-out;
    }

    .ticket-btn:hover,
    .ticket-btn:focus {
        background-color: #002766; /* darker on hover/focus */
        outline: none;
    }

    .center-btn {
        display: block; /* lets margin auto work */
        margin: 0.625rem auto; /* centers horizontally, keeps same top/bottom spacing */
    }

</style>

@code {

    private string imageSource1 = $"GroupPhoto2024.webp";

    private void GotoTicketForm()
    {
        //   ↳ adjust this route string to match the @page directive
        //     in TicketRequestForm.razor (e.g., "/ticket-request-form")
        Nav.NavigateTo("/ticket-request-form");
    }

}