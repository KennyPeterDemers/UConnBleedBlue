    public void LoadImages()
    {
        try
        {
            foreach (var file in Directory.GetFiles(path90))
            {
                if (int.Parse(Path.GetFileNameWithoutExtension(file)) < 1960)
                {
                    continue;
                }
                string path = Path.GetFileName(file);
                Tuple<string, string> tuple = new Tuple<string, string>(path.Split('.')[0], "imagesTeamPhotos90-24/" + path);
                nameUrlList.Add(tuple);
            }
        }
        catch (Exception ex)
        {
            err = ex.Message;
        }
    }
    private void OpenImage(string url)
    {
        DialogImageUrl = url;
        IsDialogOpen = true;
    }

    private void CloseDialog()
    {
        IsDialogOpen = false;
    }

}
