@page "/ticket-request-demo"

<h3>Proposed Ticket Request Demo</h3>

<video width="100%" height="auto" controls>
    <source src="videos/TicketRequestDemo.mp4" type="video/mp4" />
    Your browser does not support the video tag.
</video>


@code {
    string err = "";

    protected override void OnInitialized()
    {
        try
        {
            var filePath = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "videos", "TicketRequestDemo.mp4");
            if (!System.IO.File.Exists(filePath))
            {
                err = $"Video not found at: {filePath}";
            }
        }
        catch (Exception ex)
        {
            err = ex.Message;
        }
    }

}