<style>
    .messagebox {
        min-width: 50%;
        max-width: 100%;
        padding: 10px 10px 10px 10px;
        border: 1px solid blue;
        margin: 5px;
    }

    .verticalspacer {
        height: 40px;
    }

    textarea
    {
        width:50%;
        border: 2px solid #ccc;
        border-radius: 4px;
        background-color: #f8f8f8;
        font-size: 16px;
    }

    h1 {
        display: table;
        margin: 10px auto;
        padding: 5px;
        font-size: 50px;
        color: white;
        overflow: hidden;
    }

